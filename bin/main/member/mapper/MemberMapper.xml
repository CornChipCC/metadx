<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

  <mapper namespace="com.ktds.metadx.member.mapper.MemberMapper">
    <!-- 회원가입 -->
    <insert id="saveMember" parameterType="com.ktds.metadx.member.dto.MemberDTO">
        <!-- INSERT INTO member
        (email, pw, uname, lockbool, auth, did, jno, tid)
        VALUES(#{email}, #{pw}, #{uname}, #{lockbool}, #{auth}, #{did}, #{jno}, #{tid}); -->
        INSERT INTO member
        (email, pw, uname, did, jno, tid)
        VALUES (#{email}, #{pw}, #{uname}, #{did}, #{jno}, #{tid})
    </insert>

    <!-- 로그인 -->
    <select id="loginMember" resultType="com.ktds.metadx.member.dto.MemberDTO">
        SELECT *
        FROM member
        WHERE email = #{email}
        AND pw = #{pw}
    </select>
  </mapper>